<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jakub.remotecontrol.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/findMoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="Znajdź więcej"
            tools:text="Znajdź więcej" />

        <TextView
            android:id="@+id/SelectDevTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/passwordTextView"
            android:layout_below="@+id/passwordEditText"
            android:layout_marginTop="34dp"
            android:text="Wybierz urządzenie:"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="Wybierz urządzenie:" />

        <ListView
            android:id="@+id/devicesListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/findMoreBtn"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SelectDevTextView"
            android:layout_margin="20dp"
            android:scrollbars="vertical"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
